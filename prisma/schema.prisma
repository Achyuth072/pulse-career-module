generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model JobApplication {
  id          String   @id @default(uuid())
  companyName String
  role        String
  status      String
  dateApplied DateTime @default(now())
  aiAnalysis  String?
  createdAt   DateTime @default(now())
}

model UserProfile {
  id         String   @id @default(uuid())
  resumeText String   @db.Text // Store the parsed text here
  updatedAt  DateTime @updatedAt
}